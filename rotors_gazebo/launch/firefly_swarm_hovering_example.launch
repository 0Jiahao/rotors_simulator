    </node>
    <node name="hovering_example" pkg="rotors_gazebo" type="hovering_example" output="screen"/>
  </group>

  <group ns="$(arg mav_name)5">
    <rosparam param="wp_x">-1</rosparam>
    <rosparam param="wp_y">0</rosparam>
    <rosparam param="wp_z">1</rosparam>
